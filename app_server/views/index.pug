extends navbarDefault

block content
    include _includes/signupModal

    #banner.page-header
        include _includes/messages/error
        include _includes/messages/info
        .row
            .col-md-8
                h1= title
    form(id='locationForm')
        .form-group
            .row
                .col-md-8.col-xs-12
                    input.form-control.input-lg(type='text', name='location', placeholder='Location e.g. Subiaco' autocomplete='on')#location
                    input(type='hidden', name='lat', id='lat')
                    input(type='hidden', name='long', id='long')
                    .spacer-sm
                      .row
                          .col-md-6.col-sm-8.text-left(style='margin-top: 3px;')
                            a(style='padding-left: 18px;')
                            | Use
                            a(href='javascript: geoloc();', class='geoloc' style='color: #999;')#get_location
                                | current location
                .col-md-2.col-xs-6.text-right
                    a(href='#',data-toggle='modal',data-target='#signupmodalshort')
                        button.btn.btn-lg.btn-primary#shortBtn
                            | For now
                .col-md-2.col-xs-6.text-left
                    a(href='#',data-toggle='modal',data-target='#signupmodallong')
                        button.btn.btn-lg.btn-default#longBtn
                            | Long term
    .spacer-lg
    .row
      .col-sm-12
        .panel.panel-default.panel-spaced
          .bangers-heading.black.line-spc-3
            | CLOSE TO YOU.
          .roboto-sub-heading.dark-grey
            | Nearest crisis accommodation services.
    .row
        each location in locations
          if location
            .col-lg-4.col-md-4.col-sm-12
                .panel.panel-default.panel-spaced
                    a(href='location/'+location.uri)
                      if images[locations.indexOf(location)] != null
                        img.img-responsive.img-square.img-shadow.center-block(src=images[locations.indexOf(location)])
                      else
                        img.img-responsive.img-square.img-shadow.center-block(src='images/placeholder.png')
                    p
                    a(href='/location/'+location.uri, style='text-decoration: none; color: inherit;')
                        .panel-title.text-center.roboto-title.black.line-spc-2= location.name
                    .panel-body.text-justify.text-center.roboto-desc.dark-grey.line-spc-4
                        | #{location.description}

    .row
      .col-sm-12
        .panel.panel-default.panel-spaced
          .bangers-heading.black.line-spc-3
            | WHO TO CALL.
          .roboto-sub-heading.dark-grey
            | Numbers to call if you need help.
    .row
      .col-sm-6
        .panel.panel-default.panel-spaced
          .roboto-heading.black.line-spc-5
            | Entry Point
          .roboto-heading.phone-num.deep-pink.line-spc-2
            | 6496 0001
            p.line-spc-2
            | 1800 124 684
      .col-sm-6
        .panel.panel-default.panel-spaced
          .roboto-heading.black.line-spc-5
            | Crisis Care
          .roboto-heading.phone-num.deep-pink.line-spc-2
            | 9223 1111
            p.line-spc-2
            | 1800 199 008

    script(src='/javascripts/other.js')
    script(async='', defer='',  src='https://maps.googleapis.com/maps/api/js?key='+process.env.embed_maps_api+'&libraries=places&callback=initialize')
