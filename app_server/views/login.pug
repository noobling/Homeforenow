extends navbarDefault

block content
	.login-form(style='margin-top: 8rem;')
		h2.bang.sec-color Service Log-In
		form(action='/login', method='post', role='form')
			.form-group#Login_email
					.col-xs-12(style='padding: 0px;')
							label(for='Lemail') Email
							input(type='email',placeholder='example@example.com',name='email').form-control#Lemail
							span#Login_EFeed
					.row
			.form-group#Login_pass
					.col-xs-12(style='padding: 0px;')
							label(for='pwd') Password
							input(type='password', name='password').form-control#pwd
							span#Login_PFeed
					.row
			.text-right
					input(type='submit', value='Submit').btn.btn-primary#Login