.modal.fade(id='regloginmodal',role='dialog')
    .modal-dialog.modal-md
        .modal-content
            .modal-body
                button(type='button', data-dismiss='modal', style='padding: 7px 0px 0px 15px ;').close &times;
                ul.nav.nav-tabs.nav-justified
                    li.active
                      a(data-toggle='tab', href='#loginContent', id='loginTab').modal-title.bang.sec-color Login
                    li
                      a(data-toggle='tab', href='#registerContent', id='registerTab').modal-title.bang.sec-color Sign-up
                .tab-content
                    #loginContent.tab-pane.fade.in.active
                        form(action='/login', method='post', role='form', id='loginForm')
                            .form-group(style='margin-top: 15px;')
                                label(for='email') Email
                                input(type='email', placeholder='example@example.com', name='email').form-control#email
                            .form-group
                                label(for='pwd') Password
                                input(type='password', name='password').form-control#pwd
                            .form-group
                                input(type='hidden', name='lat')
                                input(type='hidden', name='long')
                                input(type='hidden', name='lengthOfStay')
                                .row
                            .text-left
                                .col-xs-6(style='padding: 0px;')
                                    a(href='#') Forgot Password?
                                .text-right
                                    input(type='submit', value='Submit').btn.btn-primary
                    #registerContent.tab-pane.fade
                        form(action='/register', method='post', role='form', id='registerForm')
                            .form-group
                                .col-xs-12.col-sm-6(style='margin-bottom: 15px;')
                                    .row
                                        .col-xs-12.col-sm-11(style='padding: 0px;')
                                            label(for='fName') First Name
                                            input(type='text', name='fName', id='fName', required='').form-control
                                .col-xs-12.col-sm-6(style='margin-bottom: 15px;')
                                    .row
                                        .col-xs-12.col-sm-11.col-sm-offset-1(style='padding: 0px;')
                                            label(for='LName') Last Name
                                            input(type='text', name='lName', id='lName', required='').form-control
                            .form-group
                                .col-xs-12.col-sm-8
                                    .row
                                        label Date of Birth
                                    .row
                                        .col-xs-4(style='padding: 0px; margin-bottom: 15px;')
                                            select.form-control(name='day', id='day', style='padding-left: 5px;', required='')
                                                option(hidden='true') Day
                                        .col-xs-4(style='padding: 0px; margin-bottom: 15px;')
                                            select.form-control(name='month', id='month', style='padding-left: 5px;', required='')
                                                option(hidden='true') Month
                                                option(value='0') January
                                                option(value='1') Febuary
                                                option(value='2') March
                                                option(value='3') April
                                                option(value='4') May
                                                option(value='5') June
                                                option(value='6') July
                                                option(value='7') August
                                                option(value='8') September
                                                option(value='9') October
                                                option(value='10') November
                                                option(value='11') December
                                        .col-xs-4(style='padding: 0px; margin-bottom: 15px;')
                                            select(name='year', style='padding-left: 5px;', required='').form-control#year
                                                option(hidden='true') Year
                            .form-group
                                .col-xs-4.col-sm-3.col-sm-offset-1(style='padding: 0px;')
                                    label(for='gender') Gender
                                    select.form-control(name='gender', id='gender', required='')
                                        option(hidden='true') &nbsp;
                                        option Male
                                        option Female
                                        option Unspecified
                                .col-xs-7.col-xs-offset-1.col-sm-12(style='margin-top: 20px; padding:0px;')
                                    .row
                                        .col-xs-12.col-sm-6
                                            label.checkbox-inline
                                                input(type='checkbox', name='child', id='child', value='yes')
                                                | Parent with child?
                                        .col-xs-12.col-sm-6
                                            label.checkbox-inline
                                                input(type='checkbox', name='dis', id='dis', value='yes')
                                                | Wheelchair access?
                                .row
                            .form-group
                                .col-xs-12.col-sm-8(style='margin-bottom: 15px;')
                                    .row
                                        .col-xs-12.col-sm-11(style='padding: 0px;')
                                            label(for='email') Email
                                            input(type='email', name='email', id='email', required='').form-control
                                .col-xs-12.col-sm-4(style='margin-bottom: 15px;')
                                    .row
                                        .col-xs-12.col-sm-11.col-sm-offset-1(style='padding: 0px;')
                                            label(for='phone') Phone Number 
                                                span.small(style='opacity: 0.6; filter: alpha(opacity = 60); font-style: italic;') (Optional)
                                            input(type='tel', name='phone', id='phone', maxlength='10', placeholder='04xxxxxxxx').form-control
                            .form-group
                                .col-xs-12.col-sm-6(style='margin-bottom: 15px;')
                                    .row
                                        .col-xs-12.col-sm-11(style='padding: 0px;')
                                            label(for='Rpwd') Password
                                            span.pull-right#passstrength
                                            input(type='password', name='pwd', id='Rpwd', required='').form-control
                                .col-xs-12.col-sm-6(style='margin-bottom: 15px;')
                                    .row
                                        .col-xs-12.col-sm-11.col-sm-offset-1(style='padding: 0px;')
                                            label(for='Cpwd') Confirm Password
                                            input(type='password', name='cPwd', id='Cpwd', required='').form-control
                                .col-xs-12
                                    .text-center
                                        span(style='opacity: 0.6; filter: alpha(opacity = 60); font-style: italic;') **passwords must contain digits, and lowercase and uppercase letters**
                                .row   
                            .form-group
                                input(type='hidden', name='lat')
                                input(type='hidden', name='long')
                                input(type='hidden', name='lengthOfStay')                 
                            .text-right
                                input(type='submit', value='Register').btn.btn-primary
